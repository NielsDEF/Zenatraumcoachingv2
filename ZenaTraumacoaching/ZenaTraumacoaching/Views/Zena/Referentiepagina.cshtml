@model ReferentiepaginaViewModel
@{ ViewData["Title"] = "ReferentiePagina";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
<head>
    <link rel="stylesheet" media="screen" href="~/css/Blogpaginastyle.css" />
</head>
<h1>De Zenacoaching Referenties</h1>

<button type="button" onclick="location.href='@Url.Action("blog","Zena")'">Toevoegen</button>
@foreach (var referentie in Model.referentie)
{

    <table class="table-fill">
        <thead>
            <tr>
                <th class="text-left">
                    @referentie.ReferentieCijfer
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody class="table-hover">
            <tr>
                <td class="text-left">
                    <label>@referentie.ReferentieTekst</label>
                </td>
                <td class="text-left">
                    <form action="BlogDeleteClick" method="post">
                        <input type="hidden" name="BlogID" value="@referentie.ReferentieID" />
                        <button type="submit" class="submit_btn">Delete</button>
                    </form>
                </td>
            </tr>
        </tbody>
    </table>
}