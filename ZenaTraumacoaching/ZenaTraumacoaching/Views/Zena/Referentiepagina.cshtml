@model ReferentiepaginaViewModel
@{ ViewData["Title"] = "ReferentiePagina";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
<head>
    <link rel="stylesheet" media="screen" href="~/css/Blogpaginastyle.css" />
</head>
<h1>De Zenacoaching Referenties</h1>

<button type="button" onclick="location.href='@Url.Action("referentie","Zena")'">Toevoegen</button>
@foreach (var referentie in Model.referentie)
{

    <table class="table-fill">
        <thead>
            <tr>
                <th>Cijfer</th>
                <th>Beschrijving</th>
                <th></th>
            </tr>
        </thead>
        <tbody class="table-hover">
            <tr>
                <td class="text-left">
                    @referentie.ReferentieCijfer/10
                </td>
                <td class="text-left">
                    @referentie.ReferentieTekst
                </td>
                <td class="text-left">
                    <a href="/Zena/ReferentieDeleteClick/@referentie.ReferentieID">Delete</a>
                    <a href="/Zena/ReferentieBewerken/@referentie.ReferentieID">Update</a>
                </td>
            </tr>
        </tbody>
    </table>
}