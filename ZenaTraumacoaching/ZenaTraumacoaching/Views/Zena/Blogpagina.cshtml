@model BlogpaginaViewModel
@{ ViewData["Title"] = "BlogPagina";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
<head>
    <link rel="stylesheet" media="screen" href="~/css/Blogpaginastyle.css" />
</head>
<h1>De Zenacoaching Blog</h1>
    <button type="button" onclick="location.href='@Url.Action("blog","Zena")'">Toevoegen</button>
    @foreach (var blog in Model.blog)
    {
        <table class="table-fill">
            <thead>
                <tr>
                    <th>Titel</th>
                    <th>Tekst</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="table-hover">
                <tr>
                    <td class="text-left">
                        @blog.BlogTitel
                    </td>
                    <td class="text-left">
                        @blog.BlogTekst
                    </td>
                        <td class="text-left">
                            <a href="/Zena/BlogPostDeleteClick/@blog.BlogID">Delete</a>
                            <a href="/Zena/BlogBewerken/@blog.BlogID">Update</a>
                        </td>
                </tr>
            </tbody>
        </table>
    }